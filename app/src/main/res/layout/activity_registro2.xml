<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/mRlView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#325688"
    android:padding="16dp"
    tools:context="com.example.yawar.historypet.Registro2">

    <ImageButton
       android:layout_width="70dp"
       android:layout_weight="1"
       android:layout_gravity="center"
       android:layout_margin="20dp"
       android:layout_height="0dp"
       android:onClick="registrar2"
       android:background="@drawable/add"
       android:id="@+id/set_picture"/>

    <EditText
        android:id="@+id/nombreM"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:hint="Nombre de la mascota"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:inputType="text"
        android:theme="@style/InputLine"
        android:layout_height="0dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/spinner"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/edad"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:hint="Edad"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:inputType="number"
        android:theme="@style/InputLine"
        android:layout_height="0dp" />

    <EditText
        android:id="@+id/peso"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:hint="Peso"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        android:inputType="numberDecimal"
        android:theme="@style/InputLine"
        android:layout_height="0dp" />

    <Button
        android:text="registrar"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#5486B8"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/button"
        android:layout_height="0dp"
        android:onClick="registro"/>

</LinearLayout>
